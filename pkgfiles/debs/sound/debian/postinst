#!/bin/sh
# postinst script for eternallands-sound
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	
	TARGETDIR="/usr/share/games/EternalLands/sound"
	CACHEDIR="/var/cache/eternallands"
	DOWNLOADURL="http://twinmoons.org.uk/el/"
	DOWNLOADFILE150="el_sound_150.zip"
	MD5SUM150="eb18bf6db46a5a7388f58d547ff6b787"
	DOWNLOADFILE191="EL_sound_191.zip"
	MD5SUM191="8b86878ced28c8073b2bce6b48d7bbbe"
	DOWNLOADFILEUPDATE191="EL_sound_update_191.zip"
	MD5SUMUPDATE191="255391f004c4bfb09d1765cf2d54715d"
	DOWNLOADFILEUPDATE191_1="EL_sound_update_191.1.zip"
	MD5SUMUPDATE191_1="a5f3d645a1f2dea8adf9b18c8ed94dc7"

	[ -f ~paul/el/installpkg/localdownload ] && DOWNLOADURL="http://harry/~paul/el/"

	mkdir -p $CACHEDIR
	cd $CACHEDIR

	# if we already have an archive check the md5sum is ok and remove if not
	[ ! -f $DOWNLOADFILE150 ] || echo "$MD5SUM150  $DOWNLOADFILE150" | md5sum -c - || rm -fv $DOWNLOADFILE150
	[ ! -f $DOWNLOADFILE191 ] || echo "$MD5SUM191  $DOWNLOADFILE191" | md5sum -c - || rm -fv $DOWNLOADFILE191
	[ ! -f $DOWNLOADFILEUPDATE191 ] || echo "$MD5SUMUPDATE191  $DOWNLOADFILEUPDATE191" | md5sum -c - || rm -fv $DOWNLOADFILEUPDATE191
	[ ! -f $DOWNLOADFILEUPDATE191_1 ] || echo "$MD5SUMUPDATE191_1  $DOWNLOADFILEUPDATE191_1" | md5sum -c - || rm -fv $DOWNLOADFILEUPDATE191_1

	# download the archive if we don't already have a copy, checking m5again
	if [ ! -f $DOWNLOADFILE191 ]
	then
		if [ ! -f $DOWNLOADFILE150 ]
		then
			wget -P "." -v --progress="dot:mega" $DOWNLOADURL/$DOWNLOADFILE191
			echo "$MD5SUM191  $DOWNLOADFILE191" | md5sum -c -
		elif [ ! -f $DOWNLOADFILEUPDATE191 ]
		then
			wget -P "." -v --progress="dot:mega" $DOWNLOADURL/$DOWNLOADFILEUPDATE191
			echo "$MD5SUMUPDATE191  $DOWNLOADFILEUPDATE191" | md5sum -c -
		fi
	fi

	# this patch is applied in all cases
	if [ ! -f $DOWNLOADFILEUPDATE191_1 ]
	then
		wget -P "." -v --progress="dot:mega" $DOWNLOADURL/$DOWNLOADFILEUPDATE191_1
		echo "$MD5SUMUPDATE191_1  $DOWNLOADFILEUPDATE191_1" | md5sum -c -
	fi

	UNPACKDIR="`mktemp -d /tmp/eternallands-sound.XXXXXXXXXX`"

	# unpack the archive
	cd $UNPACKDIR
	if [ -f $CACHEDIR/$DOWNLOADFILE191 ]
	then
		unzip -q $CACHEDIR/$DOWNLOADFILE191
	else
		unzip -q $CACHEDIR/$DOWNLOADFILE150
		unzip -o -q $CACHEDIR/$DOWNLOADFILEUPDATE191
	fi
	unzip -o -q $CACHEDIR/$DOWNLOADFILEUPDATE191_1

	# set the permissions
	cd sound
	chown -R root:root .
	chmod -R a=rX .

	# make the file lists
	FILELIST="eternallands-sound.filelist"
	DIRLIST="eternallands-sound.dirlist"
	find . -type f -exec echo \"{}\" \; > $TARGETDIR/$FILELIST
	find . -type d ! -name "." -exec echo \"{}\" \; | sort -r > $TARGETDIR/$DIRLIST

	# remove any existing files in the lists then move the new files into the target directory
	cd $TARGETDIR
	[ ! -s $FILELIST ] || cat $FILELIST | xargs rm -f || true
	[ ! -s $DIRLIST ] || cat $DIRLIST | xargs rmdir --ignore-fail-on-non-empty > /dev/null 2>&1 || true
	chmod -R +w .
	cp --remove-destination -rpf $UNPACKDIR/sound/* .

	rm -rf $UNPACKDIR

	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


