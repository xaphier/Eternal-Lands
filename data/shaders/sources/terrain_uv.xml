<?xml version="1.0" encoding="utf8"?>
<shader_source>
 <name>terrain</name>
 <type>uv</type>
 <shader_source_datas>
  <shader_source_data>
   <parameters>
    <parameter>
     <name>clipmap_matrices</name>
     <type>mat2x3</type>
     <qualifier>in</qualifier>
     <size>clipmap_slices</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>terrain_scale</name>
     <type>vec4</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>terrain_texture_coodrinate</name>
     <type>vec2</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>terrain_texture_size</name>
     <type>vec4</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>terrain_uvs</name>
     <type>vec2</type>
     <qualifier>out</qualifier>
     <size>clipmap_slices</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>world_uv</name>
     <type>vec2</type>
     <qualifier>out</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
   </parameters>
   <source>vec3 uv;
int i;

uv.xy =  terrain_texture_coodrinate * terrain_scale.zw;
uv.z = 1.0;

for (i = 0; i &lt; clipmap_slices; ++i)
{
	terrain_uvs[i] = uv * clipmap_matrices[i];
}

world_uv = uv.xy * terrain_texture_size.xy;
</source>
   <version>120</version>
  </shader_source_data>
 </shader_source_datas>
</shader_source>
