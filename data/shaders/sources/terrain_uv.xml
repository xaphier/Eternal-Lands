<?xml version="1.0" encoding="utf8"?>
<shader_source>
 <name>terrain</name>
 <type>uv</type>
 <shader_source_datas>
  <shader_source_data>
   <parameters>
    <parameter>
     <name>clipmap_matrices</name>
     <type>mat2x3</type>
     <qualifier>in</qualifier>
     <size>clipmap_slices</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>terrain_texture_size</name>
     <type>vec4</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>terrain_uvs</name>
     <type>vec2</type>
     <qualifier>out</qualifier>
     <size>clipmap_slices</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>texture_coordinate_0</name>
     <type>vec4</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>world_uv</name>
     <type>vec2</type>
     <qualifier>out</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
   </parameters>
   <source>int i;

for (i = 0; i &lt; clipmap_slices; ++i)
{
	terrain_uvs[i] = vec3(texture_coordinate_0.xy, 1.0) * clipmap_matrices[i];
}

world_uv = texture_coordinate_0.xy * terrain_texture_size.xy;
</source>
   <version>120</version>
  </shader_source_data>
 </shader_source_datas>
</shader_source>
