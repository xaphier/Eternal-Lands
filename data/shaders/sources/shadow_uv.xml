<?xml version="1.0" encoding="utf8"?>
<shader_source>
 <name>default</name>
 <type>shadow_uv</type>
 <shader_source_datas>
  <shader_source_data>
   <parameters>
    <parameter>
     <name>shadow_texture_matrices</name>
     <type>mat4</type>
     <qualifier>in</qualifier>
     <size>shadow_map_count</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>shadow_uvs</name>
     <type>vec4</type>
     <qualifier>out</qualifier>
     <size>shadow_map_count</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>world_position</name>
     <type>vec3</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
   </parameters>
   <source>vec4 pos;
int i;

pos = vec4(world_position, 1.0);

for (i = 0; i &lt; shadow_map_count; ++i)
{
	shadow_uvs[i] = shadow_texture_matrices[i] * pos;
}
</source>
   <version>120</version>
  </shader_source_data>
 </shader_source_datas>
</shader_source>
