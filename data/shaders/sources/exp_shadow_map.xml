<?xml version="1.0" encoding="utf8"?>
<shader_source>
 <name>esm</name>
 <type>shadow_map</type>
 <shader_source_datas>
  <shader_source_data>
   <parameters>
    <parameter>
     <name>shadow_camera</name>
     <type>vec4</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>shadow_map_data</name>
     <type>vec3</type>
     <qualifier>out</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>world_position</name>
     <type>vec3</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
   </parameters>
   <source>shadow_map_data = vec3(exp(abs(shadow_camera.z - world_position.z)));
</source>
   <version>120</version>
  </shader_source_data>
 </shader_source_datas>
</shader_source>
