<?xml version="1.0" encoding="utf8"?>
<shader_source>
 <name>default</name>
 <type>view_direction</type>
 <shader_source_datas>
  <shader_source_data>
   <parameters>
    <parameter>
     <name>camera</name>
     <type>vec4</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>world_position</name>
     <type>vec3</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>world_view_direction</name>
     <type>vec4</type>
     <qualifier>out</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
   </parameters>
   <source>world_view_direction.xyz = world_position - camera.xyz;
world_view_direction.w = dot(world_view_direction.xyz, world_view_direction.xyz);
world_view_direction *= inversesqrt(world_view_direction.w);
</source>
   <version>120</version>
  </shader_source_data>
 </shader_source_datas>
</shader_source>
