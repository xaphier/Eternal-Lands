<?xml version="1.0" encoding="utf8"?>
<shader_source>
 <name>default</name>
 <type>tbn_matrix</type>
 <shader_source_datas>
  <shader_source_data>
   <parameters>
    <parameter>
     <name>tbn_matrix</name>
     <type>mat3</type>
     <qualifier>out</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>world_normal</name>
     <type>vec3</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>world_tangent</name>
     <type>vec3</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
   </parameters>
   <source>tbn_matrix[0] = world_tangent;
tbn_matrix[1] = cross(world_normal, world_tangent);
tbn_matrix[2] = world_normal;
</source>
   <version>120</version>
  </shader_source_data>
 </shader_source_datas>
</shader_source>
