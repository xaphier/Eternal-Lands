<?xml version="1.0" encoding="utf8"?>
<shader_source>
 <name>esm</name>
 <type>shadow_map</type>
 <shader_source_datas>
  <shader_source_data>
   <parameters>
    <parameter>
     <name>shadow_camera</name>
     <source></source>
     <type>vec4</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>world_position</name>
     <source></source>
     <type>vec3</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>shadow_view_matrix</name>
     <source></source>
     <type>mat4</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>shadow_map_data</name>
     <source></source>
     <type>vec3</type>
     <qualifier>out</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
   </parameters>
   <source>{
//	shadow_map_data = vec3(exp(distance(shadow_camera.xyz, world_position)));
	shadow_map_data = vec3(exp(abs(shadow_camera.z - world_position.z)));
}
</source>
   <glsl_120>true</glsl_120>
