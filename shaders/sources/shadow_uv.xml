<?xml version="1.0" encoding="utf8"?>
<shader_source>
 <name>default</name>
 <type>shadow_uv</type>
 <shader_source_datas>
  <shader_source_data>
   <parameters>
    <parameter>
     <name>world_position</name>
     <source></source>
     <type>vec3</type>
     <qualifier>in</qualifier>
     <size>one</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>shadow_texture_matrix</name>
     <source></source>
     <type>mat4</type>
     <qualifier>in</qualifier>
     <size>shadow_map_count</size>
     <scale>1</scale>
    </parameter>
    <parameter>
     <name>shadow_uv</name>
     <source></source>
     <type>vec4</type>
     <qualifier>out</qualifier>
     <size>shadow_map_count</size>
     <scale>1</scale>
    </parameter>
   </parameters>
   <source>{
	vec4 pos;
	int i;

	pos = vec4(world_position, 1.0);

	for (i = 0; i &lt; shadow_map_count; i++)
	{
		shadow_uv[i] = shadow_texture_matrix[i] * pos;
	}
}
</source>
   <glsl_120>true</glsl_120>
   <glsl_130>true</glsl_130>
   <glsl_140>true</glsl_140>
   <glsl_150>true</glsl_150>
  </shader_source_data>
 </shader_source_datas>
</shader_source>
